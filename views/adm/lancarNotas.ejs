    function adicionarNota(nome, btn) {
        const nota = btn.parentElement.previousElementSibling.querySelector("input").value;
        if(nota === "") {
            alert("Digite a nota do aluno.");
            return;
        }
        alert(`Nota ${nota} adicionada para ${nome}`);
